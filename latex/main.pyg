// 0-based
vector<pair<int, int>> pruefer_decode(vector<int> const& code) {
    int n = code.size() + 2;
    vector<int> degree(n, 1);
    for (int i : code) degree[i]++;

    int ptr = 0;
    while (degree[ptr] != 1) ptr++;
    int leaf = ptr;

    vector<pair<int, int>> edges;
    for (int v : code) {
    edges.emplace_back(leaf, v);
    if (--degree[v] == 1 && v < ptr) {
        leaf = v;
    } else {
        ptr++;
        while (degree[ptr] != 1) ptr++;
        leaf = ptr;
    }
    }
    edges.emplace_back(leaf, n - 1);
    return edges;
}
